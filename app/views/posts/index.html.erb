<h1>Latest Posts</h1>
<% if user_signed_in? %>
  <div class="mb-4">
    <%= turbo_frame_tag "new_post", src: new_post_path %>
  </div>
<% end %>
<div id="posts">
  <% if Post.count.zero? %>
    <h2 class="fs-5">No Posts found at the moment</h2>
    <% unless user_signed_in? %>
      <%= link_to "Create one today!", new_post_path, class: "btn btn-info" %>
    <% end %>
  <% else %>
    <%= render @posts %>
  <% end %>
</div>
