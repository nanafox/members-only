<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %>
        prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.label :content, class: "form-label" %>
    <%= form.rich_textarea :content, class: "form-control" %>
  </div>

  <div>
    <%= form.label :slug, class: "form-label" %>
    <%= form.text_field :slug, class: "form-control" %>
  </div>

  <div>
    <%= form.label :status, class: "form-label" %>
    <%= form.text_field :status, class: "form-control" %>
  </div>

  <div class="mt-2">
    <%= form.submit class: "btn btn-dark" %>
  </div>
<% end %>
