<div class="m-auto" style="max-width: 60%">
  <h2>Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.label :email, class: "form-label" %><br/>
      <%= f.email_field :email,
                    placeholder: "jdoe@email.com",
                    autofocus: true,
                    autocomplete: "email",
                    class: "form-control" %>
    </div>
    <div class="field form-group" data-controller="password-visibility">
      <%= f.label :password, class: "form-label" %><br/>
      <%= f.password_field :password,
                       placeholder: "Enter your password",
                       autocomplete: "current-password",
                       data: {
                         "password-visibility-target": "input",
                       },
                       class: "form-control" %>
      <div class="d-flex justify-content-between mt-2">
        <div>
          <input
            type="checkbox"
            id="password-visibility"
            data-password-visibility-target="checkbox"
            data-action="password-visibility#toggle"
          >
          <label for="password-visibility">Show Password</label>
        </div>
        <div>
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me, class: "form-checkbox" %>
              <%= f.label :remember_me, class: "form-label" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-dark" %>
    </div>
  <% end %>
  <%= render "users/shared/links" %>
</div>
