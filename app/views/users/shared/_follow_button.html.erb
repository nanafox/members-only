<% unless current_user == user %>
  <% if current_user.follows?(user) %>
    <%= button_to "Unfollow",
    unfollow_user_path(user),
    class: "badge bg-danger text-decoration-none border-0",
    method: :delete,
    data: {
      turbo_confirm: "Are you sure you want to unfollow this author?",
    } %>
  <% else %>
    <%= button_to "Follow",
    follow_user_path(user),
    class: "badge bg-white text-black text-decoration-none border-0" %>
  <% end %>
<% end %>
