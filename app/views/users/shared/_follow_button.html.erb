<turbo-frame id=<%= "user_#{user.id}_follow" %>>
  <% unless current_user == user %>
    <% if current_user.follows?(user) %>
      <%= link_to "Unfollow",
      unfollow_user_path(user),
      class: "badge bg-danger text-decoration-none",
      data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure you want to unfollow this user?",
      } %>
    <% else %>
      <%= link_to "Follow",
      follow_user_path(user),
      class: "badge bg-white text-black text-decoration-none",
      data: {
        turbo_method: :post,
      } %>
    <% end %>
  <% end %>
</turbo-frame>
